<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                 <h1 class="m-0">Todas las facturas</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="/nueva-factura-manual" class="btn btn-info">Nueva factura manual</a>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Directorio de notas</h3>
        </div>
        <div class="card-body">
            <table id="example1" class="table table-bordered table-hover ">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Vencimiento</th>
                    <th>Número factura</th>
                    <th>Número nota</th>
                    <th>Número control</th>
                    <th>Cliente</th>
                    <th>Vendedor</th>
                    <th>Neto USD</th>
                    <th>NETO BS</th>
                </tr>
            </thead>
            <tbody id="tbody">
                {{#each facturas}}
                <tr>
                    <td>{{Fecha}}</td>
                    <td>{{Vencimiento}}</td>
                    <td><a class="text-info" href="/ver-factura/{{NumeroFactura}}" target="_blank">{{NumeroFactura}}</a></td>
                    <td><a class="text-info" href="/ver-nota-entrega/{{NumeroNota}}" target="_blank">{{NumeroNota}}</a></td>
                    <td>{{NumeroControl}}</td>
                    <td>{{Cliente}}</td>
                    <td>{{Vendedor}}</td>
                    <td>{{NetoUSD}}</td>
                    <td>{{NetoBS}}</td>
                </tr>
                {{/each}}
            </tbody>
            </table>
        </div>
    </div>
</section>