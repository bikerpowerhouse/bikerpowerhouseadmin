                                        <option value="0286">0286</option>
                                        <option value="0287">0287</option>
                                        <option value="0288">0288</option>
                                        <option value="0289">0289</option>
                                        <option value="0291">0291</option>
                                        <option value="0292">0292</option>
                                        <option value="0293">0293</option>
                                        <option value="0294">0294</option>
                                        <option value="0295">0295</option>
                                    </select>
                                </div>
                                <div class="col-sm-8">
                                    <input type="number" class="form-control" name="Telefono" value="{{Telefono}}" placeholder="Introduzca el telefono del cliente">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                        <label>Correo electronico <span class="text-muted">(Opcional)</span> </label>
                        <input type="text" class="form-control" name="email" value="{{email}}" placeholder="Introduzca el correo electronico del proveedor">
                        </div>
                    </div>
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-success">Registrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>