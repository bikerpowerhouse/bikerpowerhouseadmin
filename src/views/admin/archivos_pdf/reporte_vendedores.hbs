<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reporte de vendedores</title>
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="/plugins/summernote/summernote-bs4.min.css">
    <link href="/css/select.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/btnClose.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
</head>
<body class="container-fluid">
    <div class="row">
        <div class="col-sm-12 mt-3">
            <h2 class="text-center">{{Titulo}}</h2>
        </div>
    </div>
      {{#each todosVendedores}}
     <div class="table-responsive mt-4">
            <h3 class="text-start text-dark">{{Vendedor}}</h3>
             <table class="table table-hover table-sm">
                 <thead class="">
                     <tr>
                         <th class="h6 text-dark"><strong>FACTURA</strong></th>
                         <th class="h6 text-dark"><strong>CLIENTE</strong></th>
                         <th class="h6 text-dark"><strong>EMISIÃ“N</strong></th>
                         <th class="h6 text-dark"><strong>VENCIMIENTO</strong></th>
                         <th class="h6 text-dark"><strong>CANTIDAD TOTAL</strong></th>
                         <th class="h6 text-dark"><strong>NETO</strong></th>
                         <th class="h6 text-dark"><strong>SALDO</strong></th>
                     </tr>
                 </thead>
                 <tbody>
                     {{#each facturas}}
                     <tr>
                         <td class="h6"><strong>{{Numero}}</strong></td>
                         <td class="h6"><strong>{{Cliente}}</strong></td>
                         <td class="h6"><strong>{{Fecha}}</strong></td>
                         <td class="h6"><strong>{{Vencimiento}}</strong></td>
                         <td class="h6"><strong>{{CantidadTotal}}</strong></td>
                         <td class="h6"><strong>{{Neto}}</strong></td>
                         <td class="h6"><strong>{{Saldo}}</strong></td>
                     </tr>
                     {{/each}}
                 </tbody>
                 <tfoot>
                     <tr>
                         <td colspan="4" class="text-danger text-right">TOTALES:</td>
                         <td class="h6">{{CantidadTotal}}</td>
                         <td class="h6">{{netoTotal}}</td>
                         <td class="h6">{{SaldoTotal}}</td>
                     </tr>
                 </tfoot>

             </table>
     </div>
     {{/each}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 text-center">
                <p class="text-danger h5">Cantidad general: <span class="text-dark">{{cantidadTotalGeneral}}</span></p>
            </div>
            <div class="col-sm-4 text-center">
                <p class="text-danger h5">Neto general: <span class="text-dark">{{netoTotalGeneral}}</span></p>
            </div>
            <div class="col-sm-4 text-center">
                <p class="text-danger h5">Saldo general: <span class="text-dark">{{saldoTotalGeneral}}</span></p>
            </div>
        </div>
    </div>
     

</body>
<script>
    window.print()
</script>
</html>