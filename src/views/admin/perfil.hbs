<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                 <h1 class="m-0"><span class="text-muted">Perfil</span> {{usuario.Nombres}}</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
     <div class="row">
        <div class="col-sm-12">
            {{>errors}}
            {{>success}}
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h4>Datos de usuario</h4>
        </div>
        <div class="card-body">
              <form action="/actualizar-datos-usuario/{{usuario._id}}" method="POST">
                <div class="row">
                   <div class="col-sm-6">
                       <label for="">Correo electronico</label>
                       <input type="email" name="email" id="email" class="form-control" required value="{{usuario.email}}">
                   </div>
                   <div class="col-sm-6">
                       <label for="">Confirmar correo electronico</label>
                       <input type="email" id="emailConfirm" name="emailConfirm" class="form-control" required value="{{usuario.email}}">
                   </div>
                   <div class="col-sm-6">
                       <label for="">Contraseña</label>
                        <input type="password" name="password" minlength="7" id="password"  class="form-control" required value="{{usuario.password}}">
                   </div>
                   <div class="col-sm-6">
                       <label for="">Confirmar contraseña</label>
                        <input type="password" id="passwordConfirm" minlength="7" name="passwordConfirm" class="form-control" required value="{{usuario.password}}">
                   </div>
                   <div class="col-sm-12">
                       <span class="text-muted">La contraseña debe tener como minimo 7 caracteres</span>
                   </div>
                   <div class="col-sm-12 text-right mt-2">
                       <button type="submit" class="btn btn-success">Actualizar datos</button>
                   </div>
                </div>
            </form>
        </div>
    </div>
</section>