<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h2 class="my-2">Realizar solicitud de garantía</h2>
        </div>
        <div class="col-sm-6 text-right mt-1">
            <a class="btn btn-info" href="/solicitar-garantia-vendedor">Ver garantías</a>
        </div>
        <div class="col-sm-12">
            {{>errors}}
            {{>success}}
        </div>
    </div>
</div>
<section class="content">
    <form method="POST" accept="/registrar-nueva-garantia-vendedor">
        <div class="card">
            <div class="card-header">
                <h5>Formulario de datos</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <label>Cliente</label>
                        <select class="form-control js-exam" name="Cliente" required>
                            <option value="0">--Seleccione un cliente--</option>
                            {{#each clientes}}
                                <option value="{{Empresa}}">{{Empresa}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label>Código</label>
                        <select class="form-control js-exam" name="Codigo" required>
                            <option value="0">--Seleccione un código--</option>
                            {{#each productos}}
                                <option value="{{Codigo}}">{{Codigo}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <label>Cantidad</label>
                        <input type="number" name="Cantidad" min="1" required class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-success">Registrar</button>
        </div>  
    </form>
</section>