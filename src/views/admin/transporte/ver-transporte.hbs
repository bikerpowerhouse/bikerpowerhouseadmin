<script>
    const d = document,
    $Empresa = d.getElementById("Empresa"), 
    $Direccion = d.getElementById("Direccion"),
    $Ciudad = d.getElementById("Ciudad"),
    $Porcentaje = d.getElementById("Porcentaje"),
    $btnAgregar = d.getElementById("btnAgregar"),
    $btnEnviar = d.getElementById("btnEnviar"),
    $insertErrors = d.getElementById("insertErrors"),
    $tBody = d.getElementById("tBody"),
    $Celular = d.getElementById("Celular"),
    $CodigoTelefono = d.getElementById("CodigoTelefono"),
    $CodigoCelular = d.getElementById("CodigoCelular"),
    $Telefono = d.getElementById("Telefono"),
    $btnEditar = d.getElementById("btnEditar"),
    $transporte = d.getElementById("transporte"),
    $inputs = d.getElementsByTagName("input"),
    $button = d.getElementsByTagName("button"),
    $Email = d.getElementById("Email");

    let _id = $transporte.getAttribute("data-id")
    d.addEventListener("click", e => {
        if(e.target == $btnEditar){
            for(i=0; i< $inputs.length; i++){
                if($inputs[i].hasAttribute("readonly")){
                    $inputs[i].removeAttribute("readonly")
                }
            }
            for(i=0; i< $button.length; i++){
                if($button[i].hasAttribute("disabled")){
                    $button[i].removeAttribute("disabled")
                }
            }
            $CodigoTelefono.removeAttribute("disabled")
            $CodigoCelular.removeAttribute("disabled")
        }
    })

        const enviarTransporte = async (data) => {
        return await fetch(`/actualizar-transporte/${_id}`, {
            method: "POST",
            body: JSON.stringify(data),
            headers: {
            "Content-type": "application/json; charset=utf-8",
            },
        })
            .then((response) => {
            return response.json();
            })
            .then((response) => {
                location.reload()
            });
    };

    d.addEventListener("click", e=> {
        if(e.target == $btnAgregar){
            let validacion = 0
            if(!$CodigoCelular.value || $CodigoCelular.value == "" || $CodigoCelular.value == 0 ){
                validacion++
            }
            if(!$Celular.value || $Celular.value == "" || $Celular.value == 0 ){
                validacion++
            }
            if(!$Empresa.value || $Empresa.value == "" || $Empresa.value == 0 ){
                validacion++
            }
            if(!$Ciudad.value || $Ciudad.value == "" || $Ciudad.value == 0 ){
                validacion++
            }
            if(!$Porcentaje.value || $Porcentaje.value == ""){
                validacion++
            }
            if(validacion > 0){
               $insertErrors.innerHTML = `
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        Para poder agregar una tarifa debe llenar todos los datos del formulario.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `
                window.scrollTo(0,0)
            }else{
                let tr = `
                    <tr>
                        <td class="text-center">${$Ciudad.value}</td>
                        <td class="text-center">${$Porcentaje.value}</td/>
                        <td class="text-center"><button class="btn btn-danger">-</button></td>
                    </tr>
                `
                $tBody.innerHTML +=tr

            }
        }
        if(e.target.textContent == "-"){
            let fila = e.target.parentElement.parentElement
            $tBody.removeChild(fila)
        }
        if(e.target == $btnEnviar){
            let Tarifario = []
            let tabla = $tBody.children
            if(tabla.length < 0){
                  $insertErrors.innerHTML = `
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        Debe ingresar una tarifa como minimo para poder registrar un transporte.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `
                window.scrollTo(0,0)
            }else{
                let Descripcion = ""
                for(i=0; i< tabla.length; i++ ){
                    let data = {
                        Ciudad: tabla[i].children[0].textContent,
                        Porcentaje: tabla[i].children[1].textContent,
                    }
                    Tarifario.push(data)
                }
                let dataEnvio = {
                    Empresa: $Empresa.value,
                    Direccion: $Direccion.value,
                    Celular: $Celular.value,
                    CodigoTelefono: $CodigoTelefono.value,
                    CodigoCelular: $CodigoCelular.value,
                    Telefono: $Telefono.value,
                    email: $Email.value,
                    Tarifario: Tarifario,
                }
                enviarTransporte(dataEnvio)
            }
        }
    })



</script>
